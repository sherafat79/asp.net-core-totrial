@model IEnumerable<Product>
@{
    ViewData["Title"] = "فروشگاه من";
}

<div class="text-center">
    <h1 class="display-4">خوش آمدید</h1>
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 p-2 mx-2">
                <div class="card" style="width: 18rem;">
                    <img src="/images/@(item.Id).jpg" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">توضیحات</a>
                    </div>
                </div>
            </div>
        }
    </div>
   
    
</div>
